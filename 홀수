#include <stdio.h>#include <iostream>#include <algorithm>#include <functional>using namespace std;int odd[7];int main(){ int natural[7]; int sum = 0; int exception = 0; int count = 0; for (int i = 0;i <= 6;i++)  cin >> natural[i]; for (int i = 0;i <= 6;i++) {  if (natural[i] % 2 == 1)  {   odd[i] = natural[i];   exception++;  } } sort(odd, odd + 7, greater<int>()); for (int i = 0;odd[i] != 0;i++) {  sum = sum + odd[i];  count++; } if (exception == 0)  cout << -1; else  cout << sum << endl << odd[count - 1];  return 0;}
